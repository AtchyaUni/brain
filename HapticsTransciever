#include <esp_now.h>
#include <WiFi.h>

// Receiver MAC (ESP32 #2)
uint8_t receiverMac[] = {0xE0, 0x8C, 0xFE, 0x5C, 0x1B, 0xA4};

typedef struct {
  bool enable;        // true = vibrate, false = stop
  uint8_t effect;     // DRV2605 effect number (1 = strong click)
  uint8_t repeat;     // how many times
} BuzzCmd;

BuzzCmd cmd;
esp_now_peer_info_t peerInfo;

void OnDataSent(const uint8_t *mac_addr, esp_now_send_status_t status) {
  Serial.print("Send status: ");
  Serial.println(status == ESP_NOW_SEND_SUCCESS ? "OK" : "FAIL");
}

void setup() {
  Serial.begin(115200);
  delay(200);

  WiFi.mode(WIFI_STA);
  Serial.print("TX MAC: ");
  Serial.println(WiFi.macAddress());

  if (esp_now_init() != ESP_OK) {
    Serial.println("ESP-NOW init failed");
    return;
  }

  esp_now_register_send_cb(OnDataSent);

  memcpy(peerInfo.peer_addr, receiverMac, 6);
  peerInfo.channel = 0;     // must match receiver's channel (0 = current)
  peerInfo.encrypt = false;

  if (esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("Failed to add peer");
    return;
  }
}

void loop() {
  // Example: send a click every 1 second
  cmd.enable = true;
  cmd.effect = 1;   // strong click
  cmd.repeat = 1;

  esp_err_t result = esp_now_send(receiverMac, (uint8_t*)&cmd, sizeof(cmd));
  Serial.println(result == ESP_OK ? "Sent cmd" : "Send error");

  delay(1000);
}
